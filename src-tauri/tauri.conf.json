{
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "machine-monitor",
    "version": "0.9.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon32.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "notification": {
        "all": true
      },
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/icon32.png",
        "icons/icon128.png",
        "icons/icon256.png",
        "icons/icon.icns",
        "icons/icon256.ico"
      ],
      "identifier": "com.tauri.dev.0.1.5",
      "longDescription": "",
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Machine Monitor v.0.9.0",
        "height": 620,
        "width": 620,
        "theme" :"Dark"
      }
    ]
  }
}
